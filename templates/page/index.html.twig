{% extends 'base.html.twig' %}

{% block title %}{{ currentPage.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-xl-6 offset-xl-3">
                <input type="text" class="form-control form-control-lg" id="page-title" placeholder="Sans titre" value="{{ currentPage.title }}" aria-label="Titre">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div id="editor"></div>
            </div>
        </div>
    </div>
    <div class="context-menu list-group">
        <button type="button" class="list-group-item list-group-item-action btn-delete-page">Supprimer</button>
    </div>
{% endblock %}